<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/landing.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>register</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>newsfeed</from-outcome>
            <to-view-id>/newsfeed.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/register.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
        <navigation-rule>
        <from-view-id>/addPost.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>newsfeed</from-outcome>
            <to-view-id>/newsfeed.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/newsfeed.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>profile</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>add-post</from-outcome>
            <to-view-id>/addPost.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>post</from-outcome>
            <to-view-id>/post.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-class>Beans.Singleton</managed-bean-class>
        <managed-bean-name>sing</managed-bean-name>
        <managed-bean-scope>application</managed-bean-scope>
        <managed-property>
            <property-name>DB</property-name>
            <value>jdbc:derby://localhost:1527/coffee-gram</value>
        </managed-property>
        <managed-property>
            <property-name>user</property-name>
            <value>guest</value>
        </managed-property>
        <managed-property>
            <property-name>password</property-name>
            <value>1234</value>
        </managed-property>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/post.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>edit-post</from-outcome>
            <to-view-id>/editPost.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>newsfeed</from-outcome>
            <to-view-id>/newsfeed.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/profile.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>profile</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>edit-profile</from-outcome>
            <to-view-id>/editProfile.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/editPost.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>post</from-outcome>
            <to-view-id>/post.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>newsfeed</from-outcome>
            <to-view-id>/newsfeed.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/navbar.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>statistics</from-outcome>
            <to-view-id>/statistics.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>newsfeed</from-outcome>
            <to-view-id>/newsfeed.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
